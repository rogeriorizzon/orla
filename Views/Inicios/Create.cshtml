@model ProjetoOrla.Models.Inicio

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar nova Capa</h1>

<h4>Inicio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo_1" class="control-label"></label>
                <input asp-for="Titulo_1" class="form-control" />
                <span asp-validation-for="Titulo_1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titulo_2" class="control-label"></label>
                <input asp-for="Titulo_2" class="form-control" />
                <span asp-validation-for="Titulo_2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BotaoInicio" class="control-label"></label>
                <input asp-for="BotaoInicio" class="form-control" />
                <span asp-validation-for="BotaoInicio" class="text-danger"></span>
            </div>
            
                <img id="imagem" src="#" alt="foto"/>
                <div class="form-group">
                    <div class="btn-small">
                        <span>Selecione o arquivo</span>
                        <input asp-for="FotoInicio" class="form-control" type="file" name="arquivo" onchange="CarregarImagem(this)"/>
                        <span asp-validation-for="FotoInicio" class="text-danger"></span>
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path-wrapper validate" type="text" placeholder="Faça o upload da foto"/>
                    </div>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    

        <script>
            $(document).ready(function () {
                $("#imagem").hide();
            });

            function CarregarImagem(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                        $("#imagem" ).show();
                        
                        reader.onload = function (e) {
                        $("#imagem").attr('src', e.target.result).width(300).height(300);
                    }
                }
                reader.readAsDataURL(input.files[0]);
            }
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
